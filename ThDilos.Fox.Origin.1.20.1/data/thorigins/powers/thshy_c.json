{
    "type": "origins:multiple",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "minecraft:textures/item/egg.png",
            "text": "origin.thorigin.passive"
        }
    ],

    "give_thtracker_power":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute as @s run power grant @s thorigins:thtrackers thorigins:foxes"
        },
        "condition": {
            "type": "origins:power",
            "power": "thorigins:thtrackers",
            "inverted": true
        }
    },

    "fear":{
        "type": "origins:resource",
        "hud_render": {
            "should_render": false
        },
        "max": 2,
        "min": 0,
        "start_value": 0
    },

    "feareffect":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:apply_effect",
                    "effects": [
                        {
                            "effect": "speed",
                            "amplifier": 0,
                            "duration": 100,
                            "show_icon": true,
                            "show_particles": false,
                            "is_ambient": false
                        },
                        {
                            "effect": "weakness",
                            "amplifier": 0,
                            "duration": 100,
                            "show_icon": true,
                            "show_particles": false,
                            "is_ambient": false
                        }
                    ]
                },
                {
                    "type": "origins:modify_resource",
                    "resource": "*:*_fear",
                    "modifier": {
                        "operation": "addition",
                        "value": -1
                    }
                }
            ]
        },
        "condition": {
            "type": "origins:or",
            "conditions":[
                {
                    "type": "origins:resource",
                    "resource": "*:*_fear",
                    "compare_to": 0,
                    "comparison": ">"
                }
            ]
        }
    },

    "shakingoffear":{
        "type": "origins:shaking",
        "condition": {
            "type": "origins:resource",
            "resource":"*:*_shakingtimer",
            "comparison": ">",
            "compare_to": 0
        }
    },

    "shakingtimer":{
        "type": "origins:cooldown",
        "cooldown": 160,
        "hud_render": {
            "should_render": false
        }
    },

    "starttimer":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:trigger_cooldown",
            "power": "*:*_shakingtimer"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_fear",
            "compare_to": 0,
            "comparison": ">"
        }
    },

    "nearwolf" :{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute at @e[type=wolf,distance=..18] run resource set @s thorigins:thshy_c_fear 2"
        }
    },


    "nearpolarbear":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute at @e[type=polar_bear,distance=..16] run resource set @s thorigins:thshy_c_fear 2"
        }
    },

    "nearvillager":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute at @e[type=villager,distance=..16] run resource set @s thorigins:thshy_c_fear 2"
        },
        "condition": {
            "type": "origins:advancement",
            "advancement": "minecraft:adventure/hero_of_the_village",
            "inverted": true
        }
    },

    "nearwarden":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute at @e[type=warden,distance=..30] run resource set @s thorigins:thshy_c_fear 2"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:thtrackers_wardenkills",
            "comparison": "<",
            "compare_to": 3
        }
    },

    "nearwither":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute at @e[type=wither,distance=..50] run resource set @s thorigins:thshy_c_fear 2"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:thtrackers_witherkills",
            "comparison": "<",
            "compare_to": 1
        }
    },

    "nearedragon":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute at @e[type=ender_dragon,distance=..150] run resource set @s thorigins:thshy_c_fear 2"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:thtrackers_edragkills",
            "comparison": "<",
            "compare_to": 1
        }
    },

    "thunderforshaking":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute at @e[type=lightning_bolt] run resource set @s thorigins:thshy_c_fear 2"                    
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:thtrackers_thunderstruck",
            "comparison": "<",
            "compare_to": 16
        }
    },

    "lowhpforfear":{
        "type": "origins:action_over_time",
        "interval": 1,
        "condition":{
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:health",
                    "comparison": "<=",
                    "compare_to": 6
                },
                {
                    "type": "origins:resource",
                    "resource": "*:thtrackers_death",
                    "comparison": "<",
                    "compare_to": 8
                }
            ]
        },
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/resource set @s thorigins:thshy_c_fear 2"
        }
    },

    "netherfear":{
        "type": "origins:action_over_time",
        "condition":{
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:dimension",
                    "dimension":"minecraft:the_nether"
                },
                {
                    "type": "origins:enchantment",
                    "enchantment": "fire_protection",
                    "calculation": "sum",
                    "compare_to": 4,
                    "comparison": "<"
                },
                {
                    "type": "origins:status_effect",
                    "effect": "minecraft:fire_resistance",
                    "inverted": true
                },
                {
                    "type": "origins:elytra_flight_possible",
                    "inverted": true
                }
            ]
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:trigger_cooldown",
                    "power": "*:*_shakingtimer"
                },
                {
                    "type": "origins:execute_command",
                    "command": "/resource set @s thorigins:thshy_c_fear 2"
                }
            ]
        },
        "interval": 1
    },

    "endfear":{
        "type": "origins:action_over_time",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:dimension",
                    "dimension":"minecraft:the_end"
                },
                {
                    "type": "origins:elytra_flight_possible",
                    "inverted": true
                }
            ]
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:trigger_cooldown",
                    "power": "*:*_shakingtimer"
                },
                {
                    "type": "origins:execute_command",
                    "command": "/resource set @s thorigins:thshy_c_fear 2"
                }
            ]
        },
        "interval": 1
    },

    "bloodtrail":{
        "type": "origins:action_over_time",
        "condition": {
            "type": "origins:and",
            "conditions":[
                {
                    "type": "origins:health",
                    "comparison": "<=",
                    "compare_to": 4
                },
                {
                    "type": "origins:sneaking",
                    "inverted": true
                }
            ]
        },
        "interval": 10,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/particle dust_color_transition 1 0 0 1.5 0.15 0 0 ~ ~ ~ 0 0 0 0 1 force"
        }
    }
}
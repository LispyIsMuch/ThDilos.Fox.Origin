{
    "type": "origins:multiple",
    "hidden": true,
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "minecraft:textures/item/barrier.png",
            "text": "origin.thorigin.passive"
        }
    ],

    "test_for_sleeping": {
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "origins:nbt",
            "nbt": "{SleepTimer:1s}"
        },
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/tag @s add sleepyfox"
        }
    },

    "sleepingsound":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/playsound minecraft:entity.fox.sleep player @s[tag=sleepyfox] ~ ~ ~"
        },
        "interval": 60
    },

    "stop_sleeping_sound": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/tag @s remove sleepyfox"
        },
        "condition": {
            "type": "origins:nbt",
            "nbt": "{SleepTimer:0s}"
        }
    },

    "wakeupsound":{
        "type": "origins:action_on_wake_up",
        "entity_action": {
            "type": "origins:and",
            "actions":[
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.fox.ambient"
                }
            ]
        }
    },

    "eatingsound":{
        "type": "origins:action_on_item_use",
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.fox.eat"
        },
        "item_condition": {
            "type": "origins:food"
        }
    },

    "eatingcakesound":{
        "type": "origins:action_on_block_use",
        "block_condition": {
            "type": "apoli:block",
            "block": "cake"
        },
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.fox.eat"
        }
    },

    
    "hurtsound":{
        "type": "origins:action_when_damage_taken",
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.fox.hurt",
            "volume": 1 
        },
        "condition": {
            "type": "origins:health",
            "comparison": ">=",
            "compare_to": 1
        },
        "cooldown": 0
    },

    "eatdislikefoodsound":{
        "type": "origins:modify_food",
        "item_condition": {
            "type": "origins:or",
            "inverted": true,
            "conditions": [
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "sweet_berries"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "glow_berries"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "chicken"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "rabbit"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "cooked_chicken"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "cooked_rabbit"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "cod"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "salmon"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "cooked_cod"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "cooked_salmon"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "tropical_fish"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "rabbit_stew"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "enchanted_golden_apple"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "golden_apple"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "golden_carrot"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "apple"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "rotten_flesh"
                    }
                }
            ]
        },
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.fox.aggro",
            "volume": 0.7
        }
    },

    "deathsound":{
        "type": "origins:self_action_when_hit",
        "cooldown": 0,
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.fox.death",
            "volume": 1.0
            },
        "condition": {
                "type": "origins:nbt",
                "nbt": "{Health:0.0f}"
        }
    },

    "interaction_sound":{
        "type": "origins:action_on_being_used",
        "bientity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:target_action",
                    "action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:play_sound",
                                "sound": "minecraft:entity.fox.ambient"
                            },
                            {
                                "type": "origins:trigger_cooldown",
                                "power": "*:*_interaction_cooldown"
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "/tag @s add booped"
                            },
                            {
                                "type": "origins:delay",
                                "ticks": 1,
                                "action": {
                                    "type": "origins:execute_command",
                                    "command": "/tag @s remove booped"
                                }
                            }
                        ]
                    }
                },
                {
                    "type": "origins:actor_action",
                    "action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:execute_command",
                                "command": "/tellraw @s {\"text\":\"\",\"extra\":[{\"text\":\"Boop-ed \",\"color\":\"light_purple\",\"bold\":\"true\"},{\"selector\":\"@p[tag=booped]\",\"color\":\"gold\"}]}"
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "/tellraw @p[tag=booped] {\"text\":\"\",\"color\":\"white\",\"bold\":\"true\",\"italic\":\"false\",\"extra\":[{\"selector\":\"@s\"},{\"text\":\": \"},{\"text\":\"Boop!\",\"italic\":\"true\",\"color\":\"light_purple\"}]}"
                            }
                        ]
                    }
                }
            ]
        },
        "hands": [
            "main_hand"
        ],
        "item_condition": {
            "type": "origins:empty"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_interaction_cooldown",
            "comparison": "==",
            "compare_to": 0
        }
    },

    "interaction_cooldown":{
        "type": "origins:cooldown",
        "hud_render": {
            "should_render": false
        },
        "cooldown": 60
    }
}
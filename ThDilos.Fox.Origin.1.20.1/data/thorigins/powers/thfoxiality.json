{
    "type": "origins:multiple",
    "badges": [
        {
            "type": "origins:keybind",
            "text": "origin.thorigin.passive",
            "sprite":"minecraft:textures/item/sweet_berries.png"
        }
    ],

    "tagfordatamodify":{
        "type": "origins:action_on_callback",
        "entity_action_chosen": {
            "type": "origins:delay",
            "ticks": 1,
            "action":{
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "/tag @s add foxie"
                    }
                ]
            }
        },
        "entity_action_lost": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "/tag @s remove foxie"
                }
            ]
        }
    },

    "moredamage":{
        "type": "origins:modify_damage_dealt",
        "bientity_condition": {
            "type": "origins:target_condition",
            "condition": {
                "type": "origins:or",
                "conditions": [
                    {
                        "type": "origins:entity_type",
                        "entity_type": "rabbit"
                    },
                    {
                        "type": "origins:entity_type",
                        "entity_type": "chicken"
                    },
                    {
                        "type": "origins:entity_type",
                        "entity_type": "cod"
                    },
                    {
                        "type": "origins:entity_type",
                        "entity_type": "salmon"
                    },
                    {
                        "type": "origins:entity_type",
                        "entity_type": "tropical_fish"
                    },
                    {
                        "type": "origins:entity_type",
                        "entity_type": "turtle"
                    }
                ]
            }
        },
        "modifier": {
            "value": 3,
            "operation": "multiply_base"
        }
    },

    "wolfangy":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute as @e[type=wolf,distance=..18] run data modify entity @s AngerTime set value 4"
        },
        "condition": {
                "type": "origins:resource",
                "resource":"*:thhunt_timer",
                "compare_to": 25,
                "comparison": "<=",
                "inverted": true
        }
    },

    "wolfattack":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute as @e[type=wolf,distance=..18] run data modify entity @s AngryAt set from entity @p[tag=foxie] UUID"
        },
        "condition": {
            "type": "origins:resource",
            "resource":"*:thhunt_timer",
            "compare_to": 25,
            "comparison": "<=",
            "inverted": true
        }
    },

    "polarbearangy":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute as @e[type=polar_bear,distance=..16] run data modify entity @s AngerTime set value 4"
        },
        "condition": {
            "type": "origins:resource",
            "resource":"*:thhunt_timer",
            "compare_to": 25,
            "comparison": "<=",
            "inverted": true
        }
    },

    "polarbearattack":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute as @e[type=polar_bear,distance=..16] run data modify entity @s AngryAt set from entity @p[tag=foxie] UUID"
        },
        "condition": {
            "type": "origins:resource",
            "resource":"*:thhunt_timer",
            "compare_to": 25,
            "comparison": "<=",
            "inverted": true
        }
    },

    "sweetberries":{
        "type": "origins:invulnerability",
        "damage_condition": {
            "type": "origins:name",
            "name": "sweetBerryBush"
        }
    },

    "nightvision":{
        "type": "origins:toggle_night_vision",
        "active_by_default": true,
        "strength": 0.5,
        "key": {
            "key":"key.origins.denary_active"
        }
    },

    "foxfrien":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "/execute as @e[type=fox,distance=..15] run data modify entity @s Trusted append from entity @p[tag=foxie] UUID"
        }
    },

    "giveitemwhenwakeup":{
        "type": "origins:action_on_wake_up",
        "entity_action": {
            "type": "origins:and",
            "actions":[
                {
                    "type": "origins:choice",
                    "actions": [
                            {
                                "element": {
                                    "type": "origins:give",
                                    "stack": {
                                        "item": "emerald",
                                        "amount": 1
                                    }
                                },
                                "weight": 5
                            },
                            {
                                "element": {
                                    "type": "origins:give",
                                    "stack": {
                                        "item": "rabbit_foot",
                                        "amount": 1
                                    }
                                },
                                "weight": 10
                            },
                            {
                                "element": {
                                    "type": "origins:give",
                                    "stack": {
                                        "item": "rabbit_hide",
                                        "amount": 1
                                    }
                                },
                                "weight": 10
                            },
                            {
                                "element": {
                                    "type": "origins:give",
                                    "stack": {
                                        "item": "egg",
                                        "amount": 1
                                    }
                                },
                                "weight": 15
                            },
                            {
                                "element": {
                                    "type": "origins:give",
                                    "stack": {
                                        "item": "wheat",
                                        "amount": 1
                                    }
                                },
                                "weight": 20
                            },
                            {
                                "element": {
                                    "type": "origins:give",
                                    "stack": {
                                        "item": "leather",
                                        "amount": 1
                                    }
                                },
                                "weight": 20
                            },
                            {
                                "element": {
                                    "type": "origins:give",
                                    "stack": {
                                        "item": "feather",
                                        "amount": 1
                                    }
                                },
                                "weight": 20
                            }
                        ]
                },
                {
                    "type": "origins:execute_command",
                    "command": "/title @s actionbar {\"text\":\"You Found Something When You Were Asleep!\",\"color\":\"gold\",\"bold\":true}"
                }
            ]
        }
    },

    "get_fox_item":{
        "type": "origins:action_on_entity_use",
        "bientity_action": {
            "type": "origins:target_action",
            "action": {
                "type": "origins:drop_inventory",
                "slot": "weapon.mainhand",
                "inventory_type": "inventory"
            }
        },
        "hands": [
            "main_hand"
        ],
        "item_condition": {
            "type": "origins:empty"
        }
    },

    "sleepindark":{
        "type": "origins:prevent_sleep",
        "block_condition": {
            "type": "origins:light_level",
            "comparison": ">",
            "compare_to": 5,
            "light_type": "block"
        },
        "set_spawn_point": true,
        "message": "origin.thorigin.cant_sleep_light"
    },

    "sleepundershade":{
        "type": "origins:prevent_sleep",
        "block_condition": {
            "type": "origins:exposed_to_sky"
        },
        "message": "origin.thorigin.cant_sleep_shade",
        "set_spawn_point": true
    }
}

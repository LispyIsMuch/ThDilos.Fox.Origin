{
    "type": "origins:multiple",
    "hidden": true,
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "minecraft:textures/item/barrier.png",
            "text": "origin.thorigin.passive"
        }
    ],

    "deathsoundtag":{
        "type": "origins:action_on_callback",
        "entity_action_chosen": {
            "type": "origins:delay",
            "ticks": 1,
            "action":{
                "type": "origins:and",
                 "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "/tag @s add deathsoundon"
                        },
                        {
                            "type": "origins:execute_command",
                            "command": "/scoreboard objectives add deadcheck deathCount"
                        }
                    ]
                }
            },
            "entity_action_lost": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "/tag @s remove deathsoundon"
                    },
                    {
                        "type": "origins:execute_command",
                        "command": "/scoreboard objectives remove deadcheck"
                    }
                ]
            }
        },

    "snoringwhensleeping":{
        "type": "origins:action_over_time",
        "condition":{
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:nbt",
                    "nbt": "{SleepTimer:30s}"
                },
                {
                    "type": "origins:nbt",
                    "nbt": "{SleepTimer:70s}"
                }
            ]
        },
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.fox.sleep"
        },
        "interval": 1
    },

    "wakeupsound":{
        "type": "origins:action_on_wake_up",
        "entity_action": {
            "type": "origins:and",
            "actions":[
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.fox.ambient"
                }
            ]
        }
    },

    "eatingsound":{
        "type": "origins:action_on_item_use",
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.fox.eat"
        },
        "item_condition": {
            "type": "origins:food"
        }
    },

    "eatingcakesound":{
        "type": "origins:action_on_block_use",
        "block_condition": {
            "type": "apoli:block",
            "block": "cake"
        },
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.fox.eat"
        }
    },

    
    "hurtsound":{
        "type": "origins:action_when_damage_taken",
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.fox.hurt",
            "volume": 1 
        },
        "condition": {
            "type": "origins:health",
            "comparison": ">=",
            "compare_to": 1
        },
        "cooldown": 0
    },

    "eatdislikefoodsound":{
        "type": "origins:modify_food",
        "item_condition": {
            "type": "origins:or",
            "inverted": true,
            "conditions": [
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "sweet_berries"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "glow_berries"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "chicken"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "rabbit"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "cooked_chicken"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "cooked_rabbit"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "cod"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "salmon"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "cooked_cod"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "cooked_salmon"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "tropical_fish"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient":{
                        "item": "rabbit_stew"
                    }
                }
            ]
        },
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.fox.aggro",
            "volume": 0.7
        }
    }
}
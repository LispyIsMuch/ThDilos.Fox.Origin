{
    "type": "origins:multiple",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "minecraft:textures/item/bone.png",
            "text": "origin.thorigin.sneak"
        }
    ],

    "timer":{
        "type": "origins:cooldown",
        "cooldown": 50,
        "hud_render": {
            "should_render": true,
            "bar_index": 3,
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:sneaking"
                    }
                ]
            }
        }
    },

    "invisibility":{
        "type": "origins:invisibility",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource":"*:*_timer",
                    "compare_to": 25,
                    "comparison": "<="
                }
            ]
        }
    },

    "start":{
        "type": "origins:active_self",
        "key": {
            "key": "key.sneak"
        },
        "entity_action": {
            "type": "origins:trigger_cooldown",
            "power": "*:*_timer"
        }
    },

    "resetwhenunsneak":{
        "type": "origins:action_over_time",
        "interval": 2,
        "entity_action": {
            "type": "origins:trigger_cooldown",
            "power": "*:*_timer"
        },
        "condition": { 
            "type": "origins:sneaking",
            "inverted": true
        }
    },

    "resetwhendash":{
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:trigger_cooldown",
            "power": "*:*_timer"
        },
        "cooldown": 30
    },

    "resetwhentakedamage":{
        "type": "origins:action_when_damage_taken",
        "damage_condition": {
            "type": "origins:or",
            "conditions":[
                {
                    "type": "origins:amount",
                    "comparison": ">=",
                    "compare_to": 3
                },
                {
                    "type": "origins:name",
                    "name": "onFire"
                },
                {
                    "type": "origins:name",
                    "name": "inFire"
                }
            ]
        },
        "entity_action": {
            "type": "origins:trigger_cooldown",
            "power": "*:*_timer"
        },
        "cooldown": 0
    },


    "resetwhenfall3blocks":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:trigger_cooldown",
            "power": "*:*_timer"
        },
        "condition": {
            "type": "origins:fall_distance",
            "comparison": ">=",
            "compare_to": 3
        }
    },

    "timer2":{
        "type": "origins:cooldown",
        "cooldown": 100,
        "hud_render": {
            "should_render": true,
            "inverted": true,
            "bar_index": 5,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png"

        }
    },

    "damagebonus":{
        "type":"origins:modify_damage_dealt",
        "modifier": {
            "operation":"multiply_base",
            "value": 0.5
        },
        "condition": {
             "type": "origins:resource",
             "resource": "*:*_timer2",
             "comparison": ">",
             "compare_to": 0
        },
        "hidden": true
    },

    "start2":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:trigger_cooldown",
            "power": "*:*_timer2"
        },
        "condition":{
            "type": "origins:and",
            "conditions": [
             {
                "type": "origins:sneaking"
             },
            {
            "type": "origins:resource",
            "resource": "*:*_timer",
            "comparison": "==",
            "compare_to": 0
            }
            ]
         }
    }
}